<%- include('../../views/partials/header') %>

<main class="container">
  <h1>Inventory Management</h1>
  
  <% if (message) { %>
    <div class="alert alert-<%= message.type || 'info' %>">
      <%- message.text %>
    </div>
  <% } %>
  
  <div class="management-container">
    <div class="management-card">
      <h2>Management Options</h2>
      <p>Choose an option below to manage the inventory.</p>
      <div class="management-actions">
        <a href="/inv/add-classification" class="btn btn-primary">Add New Classification</a>
        <a href="/inv/add-inventory" class="btn btn-primary">Add New Inventory</a>
      </div>
    </div>
  </div>
</main>

<%- include('../../views/partials/footer') %>
