<%- include('../../views/partials/header') %>

<main class="container mt-4">
  <h1 class="text-center mb-4">Inventory Management</h1>
  
  <% if (message) { %>
    <div class="alert alert-<%= message.type || 'info' %>">
      <%- message.text %>
    </div>
  <% } %>
  
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body text-center">
          <h5 class="card-title">Management Options</h5>
          <p class="card-text">Choose an option below to manage the inventory.</p>
          <div class="d-grid gap-2">
            <a href="/inv/add-classification" class="btn btn-primary">Add New Classification</a>
            <a href="/inv/add-inventory" class="btn btn-primary">Add New Inventory</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../../views/partials/footer') %>
