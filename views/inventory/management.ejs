<main class="container">
  <h1>Inventory Management</h1>
  
  <% if (message) { %>
    <div class="alert alert-<%= message.type || 'info' %>">
      <%- message.text %>
    </div>
  <% } %>
  
  <div class="management-container">
    <div class="management-card">
      <h2>Management Options</h2>
      <p>Choose an option below to manage the inventory.</p>
      <div class="management-actions">
        <a href="/inv/add-classification" class="btn btn-primary">Add New Classification</a>
        <a href="/inv/add-inventory" class="btn btn-primary">Add New Inventory</a>
      </div>
      
      <div class="inventory-management">
        <h2>Manage Inventory</h2>
        <p>Select a classification from the list to view the inventory items.</p>
        
        <div class="classification-select">
          <% if (typeof classificationSelect === 'string' && classificationSelect.trim() !== '') { %>
            <%- classificationSelect %>
          <% } else { %>
            <p>No classifications found. Please add a classification first.</p>
          <% } %>
        </div>
        
        <div class="inventory-table-container">
          <!-- Desktop Table -->
          <table id="inventoryDisplay" class="inventory-table">
            <thead>
              <tr>
                <th>Vehicle Name</th>
                <th>Modify</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
              <!-- Inventory items will be dynamically inserted here by JavaScript -->
            </tbody>
          </table>
          
          <!-- Mobile Card View (hidden by default, shown via CSS on mobile) -->
          <div id="inventoryCards" class="inventory-cards">
            <!-- Cards will be inserted here by JavaScript -->
          </div>
          
          <div class="loading-text" style="display: none;">Loading inventory...</div>
          <div class="error-text" style="display: none;">Error loading inventory. Please try again.</div>
        </div>
        
        <noscript>
          <p class="alert alert-warning">JavaScript must be enabled to use this page.</p>
        </noscript>
      </div>
    </div>
  </div>
</main>

<script src="/js/inventory.js"></script>
