<%- include('../../views/partials/header') %>

<main class="container mt-4">
  <h1 class="text-center mb-4">Inventory Management</h1>
  
  <% if (message) { %>
    <div class="alert alert-<%= message.type || 'info' %>">
      <%= message.text %>
    </div>
  <% } %>
  
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="h5 mb-0">Management Options</h2>
        </div>
        <div class="card-body">
          <div class="d-grid gap-3">
            <a href="/inv/add-classification" class="btn btn-primary btn-lg">Add New Classification</a>
            <a href="/inv/add-inventory" class="btn btn-primary btn-lg">Add New Inventory</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../../views/partials/footer') %>
